# Local development - HTTP only
:80 {
    # Frontend (default)
    reverse_proxy frontend:3000

    # API routes (Go backend on port 8080)
    handle /api/* {
        reverse_proxy backend:8080
    }

    # Health check
    handle /health/* {
        reverse_proxy backend:8080
    }

    # Compression
    encode gzip

    # Logging to stdout for development
    log {
        output stdout
        format console
    }
}
